<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/actionModeColorPrimary</item>
    </style>
    
    <style name="TextAppearance.CanadaTransit.Item.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/list_title</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextAppearance.CanadaTransit.Item.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/list_description</item>
    </style>

    <style name="TextAppearance.CanadaTransit.Item.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">@dimen/list_description2</item>
    </style>

</resources>