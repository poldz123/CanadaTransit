<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_operator"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground"
    app:cardCornerRadius="@dimen/radius_card_view"
    app:cardElevation="@dimen/elevation_item"
    app:cardPreventCornerOverlap="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_operator_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/textview_operator_title"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageview_operator_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/spacing_large"
            android:background="@drawable/ct_circle_white"
            android:padding="2dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_operator_state"
            style="@style/TextAppearance.CanadaTransit.Item.Subtitle2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textColor="@color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/view_operator_icon"
            app:layout_constraintLeft_toLeftOf="@id/view_operator_icon"
            app:layout_constraintRight_toRightOf="@id/view_operator_icon"
            app:layout_constraintTop_toBottomOf="@id/imageview_operator_icon"
            tools:text="ON-OT" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_operator_title"
            style="@style/TextAppearance.CanadaTransit.Item.Headline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_large"
            android:paddingStart="@dimen/spacing_large"
            android:paddingEnd="@dimen/spacing_medium"
            android:textColor="@color/colorTextPrimary"
            app:layout_constraintLeft_toRightOf="@id/imageview_operator_icon"
            app:layout_constraintRight_toLeftOf="@+id/checkbox_operator_select"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_operator_website"
            style="@style/TextAppearance.CanadaTransit.Item.Subtitle1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_large"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="@dimen/spacing_large"
            android:paddingEnd="@dimen/spacing_medium"
            android:textColor="@color/colorTextSecondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imageview_operator_icon"
            app:layout_constraintRight_toLeftOf="@+id/checkbox_operator_select"
            app:layout_constraintTop_toBottomOf="@id/textview_operator_title"
            tools:text="description" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_operator_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_medium_large"
            android:minWidth="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>